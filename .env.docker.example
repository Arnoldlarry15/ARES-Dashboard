# Docker Compose environment variables template
# Copy this file to .env and configure your values

# Application Configuration
PORT=3000
NODE_ENV=production

# AI API Configuration (Required for AI-powered payload generation)
GEMINI_API_KEY=your_gemini_api_key_here

# Database Configuration (Uncomment for production backend)
# DB_PASSWORD=secure_random_password_here
# DATABASE_URL=postgresql://ares:${DB_PASSWORD}@postgres:5432/ares

# Redis Configuration (Uncomment for production backend)
# REDIS_PASSWORD=secure_random_password_here
# REDIS_URL=redis://redis:6379

# Authentication Configuration (Uncomment for OAuth)
# SESSION_SECRET=random_32_character_secret_key
# JWT_SECRET=another_random_32_character_key
# OAUTH_PROVIDER=google
# OAUTH_CLIENT_ID=your_oauth_client_id
# OAUTH_CLIENT_SECRET=your_oauth_client_secret
# OAUTH_CALLBACK_URL=https://your-domain.com/auth/callback

# Data Retention Configuration (Optional)
# AUDIT_LOG_RETENTION_DAYS=90
# CAMPAIGN_RETENTION_DAYS=0
# SOFT_DELETE_RECOVERY_DAYS=30
# SESSION_TIMEOUT_HOURS=24

# Privacy Controls (Optional)
# PROMPT_STORAGE=false
# LOGGING_ENABLED=true
# COLLECT_USAGE_DATA=false
# TELEMETRY_ENABLED=false

# Rate Limiting (Optional)
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration (Optional)
# CORS_ORIGIN=https://your-domain.com
